@model EnderecoModel
@{

    ViewData["Title"] = "Editar Endereço";
}

<div class="text-center">

    <h1 class="display-4">Editar Endereço</h1>

</div>


<form asp-controller="Endereco" asp-action="EditAdrees" method="post">

    <input type="hidden" asp-for="Id"/>
  <div class="form-row">
   <div class="form-group">
      <label for="inputEndereco">Endereco</label> 
      <input type="text" asp-for="Endereco" class="form-control" placeholder="Digite o seu Endereço">
    </div>
    <div class="form-group">
      <label for="inputCEP">CEP</label>
      <input type="text" asp-for="CEP" class="form-control" placeholder="Digite seu CEP">
    </div>
  </div>
  <div class="form-group">
    <label for="inputCidade">Cidade</label>
    <input type="text" asp-for="Cidade" class="form-control" placeholder="Digite a sua Cidade">
  </div>
  <div class="form-group">
    <label for="inputEstado">Estado</label>
    <input type="text" asp-for="Estado" class="form-control" placeholder="Digite o seu Estado">
  </div>
  <div class="form-row">
  </div>
  <div class="form-group">
  </div>
  <button type="submit" class="btn btn-primary">Alterar</button>
  <a class="btn btn-secundary" asp-controller="Endereco" asp-action="Index" role="button">Voltar</a>
</form>