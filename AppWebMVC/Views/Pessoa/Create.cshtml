@model PessoaModel
@{

    ViewData["Title"] = "Cadastrar Usuário";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Usuário</h1>

</div>

<form asp-controller="Pessoa" asp-action="Create" method="post">
  <div class="form-row">
    <div class="form-group">
      <label for="inputName">Nome</label> 
      <input type="text" asp-for="Nome" class="form-control" placeholder="Digite seu Nome">
      @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group"> 
      <label for="inputTelephone">Telefone</label>
      <input type="tel" asp-for="Telefone" class="form-control" placeholder="Digite seu Telefone">
      @Html.ValidationMessageFor(x => x.Telefone)
    </div>
  </div>
  <div class="form-group">
    <label for="inputCpf">CPF</label>
    <input type="number" asp-for="CPF" class="form-control" placeholder="Digite o número do seu CPF">
    @Html.ValidationMessageFor(x => x.CPF)
  </div>
  <div class="form-group">
  </div>
  <button type="submit" class="btn btn-primary">Adicionar</button>
  <a class="btn btn-secundary" asp-controller="Pessoa" asp-action="Index" role="button">Voltar</a>
</form>