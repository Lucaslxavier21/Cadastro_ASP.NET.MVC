@model PessoaModel
@{

    ViewData["Title"] = "Confirmação Apagar Usuário";
}

<div class="text-center">
    <h3>Realmente Deseja Apagar o Usuário (@Model.Nome) ?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-action="Index" asp-controller="Pessoa">Cancelar Exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-action="Remove" asp-controller="Pessoa" asp-route-id="@Model.Id">Confirmar Exclusão</a>